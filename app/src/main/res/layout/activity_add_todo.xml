<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.zheteng123.pomotodo.ui.addtodo.AddTodoActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/task_name"/>
        
        <RadioGroup
            android:id="@+id/rg_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:checkedButton="@+id/rb_important_crash">

            <RadioButton
                android:id="@+id/rb_important_crash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/important_crash"/>

            <RadioButton
                android:id="@+id/rb_important_uncrash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/important_uncrash"/>

            <RadioButton
                android:id="@+id/rb_unimportant_crash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unimportant_crash"/>

            <RadioButton
                android:id="@+id/rb_unimportant_uncrash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unimportant_uncrash"/>

        </RadioGroup>

    </LinearLayout>

</LinearLayout>
